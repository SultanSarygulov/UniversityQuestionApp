<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.uqa.presentation.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_askQuestionFragment"
            app:destination="@id/askQuestionFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.example.uqa.presentation.question.QuestionFragment"
        android:label="Question"
        tools:layout="@layout/fragment_question">
        <argument
            android:name="currentPost"
            app:argType="com.example.uqa.data.Post" />
        <action
            android:id="@+id/action_questionFragment_to_blankFragment"
            app:destination="@id/blankFragment" />
    </fragment>
    <fragment
        android:id="@+id/askQuestionFragment"
        android:name="com.example.uqa.presentation.askQuestion.AskQuestionFragment"
        android:label="Ask Question"
        tools:layout="@layout/fragment_ask_question" />
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.uqa.presentation.question.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" />
</navigation>