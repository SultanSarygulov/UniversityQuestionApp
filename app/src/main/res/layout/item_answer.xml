<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="126dp">

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Damn, guys you still donâ€™t evem know how to get your ID"
        android:textColor="#232849"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/answer_author_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/answer_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mr. Remudin"
        android:textColor="#232849"
        android:textFontWeight="600"
        app:layout_constraintBottom_toBottomOf="@+id/answer_author_image"
        app:layout_constraintStart_toEndOf="@+id/answer_author_image"
        app:layout_constraintTop_toTopOf="@+id/answer_author_image" />

    <ImageView
        android:id="@+id/answer_upvote_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/answer_downvote_button"
        app:layout_constraintEnd_toStartOf="@+id/answer_downvote_button"
        app:srcCompat="@drawable/ic_upvote" />

    <TextView
        android:id="@+id/answer_upvotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/answer_upvote_button"
        app:layout_constraintStart_toEndOf="@+id/answer_upvote_button"
        app:layout_constraintTop_toTopOf="@+id/answer_upvote_button" />

    <ImageView
        android:id="@+id/answer_downvote_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/answer_author_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_downvote" />

    <TextView
        android:id="@+id/answer_downvotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/answer_downvote_button"
        app:layout_constraintStart_toEndOf="@+id/answer_downvote_button"
        app:layout_constraintTop_toTopOf="@+id/answer_downvote_button" />

    <TextView
        android:id="@+id/reply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:text="Reply"
        android:textColor="#4983C7"
        app:layout_constraintBottom_toBottomOf="@+id/answer_upvote_button"
        app:layout_constraintEnd_toStartOf="@+id/answer_upvote_button"
        app:layout_constraintTop_toTopOf="@+id/answer_upvote_button" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>